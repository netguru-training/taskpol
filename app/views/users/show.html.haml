.col-sm-8.col-sm-offset-2
  %h1
    = @user.name
  %h3
    = "Email: " + @user.email
  %h3
    = "Registered: " + @user.created_at.strftime("%d/%m/%Y")
  - if @user.last_sign_in_at
    %h3
      = "Last login: " + @user.last_sign_in_at.strftime("%d/%m/%Y")

  %br
  %h3
    Created projects
  %table.table.table-striped
    %tr
      %th #
      %th Title
      %th Created at
      - unless @user.authored_projects.empty?
        - @user.authored_projects.each do |p|
          %tr
            %td= p.id
            %td= link_to p.title, project_path(p)
            %td= p.created_at.strftime("%d/%m/%Y")
  %br

  %br
  %h3
    Participate in projects
  %table.table.table-striped
    %tr
      %th #
      %th Title
      %th Created at
    - unless @user.projects.nil?
      - @user.projects.each do |p|
        %tr
          %td
            = p.id
          %td
            = link_to p.title, project_path(p)
          %td
            = p.created_at.strftime("%d/%m/%Y")
  %br


  %h3
    Created tasks
  %table.table.table-striped
    %tr
      %th #
      %th Name
      %th Status
      %th Project
      %th Created at
      %th Options
    - @authored_tasks.each do |t|
      %tr
        %td
          %h4
            = t.id
        %td
          %h5
            = link_to t.name, task_path(t)
        %td
          %h5
            = t.status
        %td
          %h5
            = t.project.title
        %td
          %h5
            = t.created_at.strftime("%d/%m/%Y")
        %td
          = link_to "Delete", task_path(t), method: :delete, data: { confirm: "Are you sure?" }
          = link_to "Edit", edit_task_path(t)
  %br
  %h3
    Owned tasks
  %table.table.table-striped
    %tr
      %th #
      %th Name
      %th Status
      %th Project
      %th Created at
    - @owned_tasks.each do |t|
      %tr
        %td
          %h4
            = t.id
        %td
          %h5
            = t.name
        %td
          %h5
            = t.status
        %td
          %h5
            = t.project.title
        %td
          %h5
            = t.created_at.strftime("%d/%m/%Y")
