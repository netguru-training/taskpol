.col-md-10.col-md-offset-1
  .row
    .col-md-2
      .btn-group
        =link_to 'Add task', new_project_task_path(@project, @task), class: 'btn btn-success btn-sm'
        =link_to 'Back', project_path(@project), class: 'btn btn-warning btn-sm'
    .col-md-8.text-center
      %h2
        = @project.title
  .row
    .col-md-3
      %h3 To Do
      .list-group
        - @tasks.each do |task|
          - if task.status.name == "ToDo"
            = link_to project_task_path(task.project, task), class:"list-group-item" do
              %h4.list-group-item-heading= task.name
              %p.list-group-item-text= task.desc
              %p.list-group-item-text= task.author.email
              - if task.owner
                %p.list-group-item-text= task.owner.email
              %p.list-group-item-text.text-muted= "Number of comments: xx"


    .col-md-3
      %h3 In Progress
      .list-group
        - @tasks.each do |task|
          - if task.status.name == "In progress"
            = link_to project_task_path(task.project, task), class:"list-group-item" do
              %h4.list-group-item-heading= task.name
              %p.list-group-item-text= task.desc
