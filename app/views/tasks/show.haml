.col-md-offset-3
  .col-md-6
    .list-group
      %h3.list-group-item-heading= @task.name
      %p.list-group-item-text= @task.desc
      %p.list-group-item-text= "Task author: #{@task.author.email}"
      - if @task.owner
        %p.list-group-item-text= "Task owner: #{@task.owner.email}"
      %p.list-group-item-text= "Created at: #{@task.created_at.strftime("%e.%m.%Y")}"
      %p.list-group-item-text= "Updated at: #{@task.updated_at.strftime("%e.%m.%Y")}"
      %p.list-group-item-text= "Status of task: #{@task.status.name}"
      .list-group
      .btn.btn-default= link_to "Edit Task", edit_task_path(@task)
      %hr/
      = render 'comments/new'
      = render 'comments/index'
