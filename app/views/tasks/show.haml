.col-md-offset-3
  .col-md-6
    .list-group
      %h3.list-group-item-heading= @task.name
      %p.list-group-item-text= @task.desc
      %p.list-group-item-text= "Task author: #{@task.author.name}"
      - if @task.owner
        %p.list-group-item-text= "Task owner: #{@task.owner.name}"
      %p.list-group-item-text= "Created at: #{@task.created_at.strftime("%e.%m.%Y")}"
      %p.list-group-item-text= "Updated at: #{@task.updated_at.strftime("%e.%m.%Y")}"
      %p.list-group-item-text= "Status of task: #{@task.status.name}"
      .list-group
        - @comments.each do |c|
          %p.list-group-item-text= c.desc
          %p.list-group-item-text= c.author_id

      .btn.btn-default= link_to "Edit Task", edit_project_task_path(@project, @task)
      .btn.btn-default= link_to "Add Comment", new_comment_path(@comment)
      .btn.btn-default= link_to "Edit Task", edit_project_task_path(@task.project, @task)
      %hr/
      = render 'comments/new'
      = render 'comments/index'
